@model EmprestimosModel
@{
	ViewData["Title"] = "Excluir Empréstimo";
}

<div class="container bg-dark bg-gradient p-5 rounded">
	<div class="mb-5 text-center">
		<h1 class="text-light">Excluir Empréstimo</h1>
	</div>
	<form class="text-light" method="post" asp-controller="Emprestimo" asp-action="Excluir">
		<input type="hidden" asp-for="Id" />

		<div mb-3>
			<label for="Recebedor" class="form-label">Recebedor</label>
			<input type="text" class="form-control text-light" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o livro" disabled>
			<span asp-validation-for="Recebedor"></span>
		</div>

		<div class="mb-3">
			<label for="Fornecedor" class="form-label">Fornecedor</label>
			<input type="text" class="form-control text-light" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está emprestando o livro?" disabled>
			<span asp-validation-for="Fornecedor"></span>
		</div>

		<div class="mb-3">
			<label for="Livro" class="form-label">Livro</label>
			<input type="text" class="form-control text-light" asp-for="Livro" id="Livro" placeholder="Qual é o livro que está sendo emprestado?" disabled>
			<span asp-validation-for="Livro"></span>
		</div>

		<div class="d-flex gap-5 mt-5">
			<button type="submit" class="btn btn-danger w-50">Excluir</button>
			<a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
		</div>


	</form>
</div>